pipeline {
    agent any

    stages {
        stage('clone the project') {
            steps {
                echo 'my job is to clone the project'
                git 'https://github.com/vincloud2/Helloworld-latest.git'
            }
        }
        stage('build the project') {
            steps {
                echo 'my job is to build the project'
                script {
                    sh 'mvn clean package'
                }
            }
        }
        stage('Deploy to tomca server') {
            steps {
                echo 'my job is to deploy to tomvat server'
                deploy adapters: [tomcat8(credentialsId: 'tomcar-server', path: '', url: 'http://3.1.200.99:8080/')], contextPath: null, war: '**/*.war'
            }
        }      

    }
}
